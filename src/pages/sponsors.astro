<style>
	:root {
    --vyoma-teal: #30c5dc;
}

body {
    background-color: #0f0f0f;
    background-image: radial-gradient(rgba(255, 255, 255, 0.1) 1px, transparent 1px);
    background-size: 30px 30px;
    color: white;
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
}

/* Section Styling */
.sponsorship {
    padding: 2rem 1rem;
    text-align: center;
}

/* Why Sponsor Us Section */
.benefit-hexagon {
    background-color: rgba(30, 30, 30, 0.6);
    border: 1px solid rgba(255, 255, 255, 0.1);
    transition: all 0.3s ease;
    clip-path: polygon(5% 0%, 95% 0%, 100% 50%, 95% 100%, 5% 100%, 0% 50%);
    backdrop-filter: blur(5px);
    padding: 1.5rem;
    text-align: center;
}

.benefit-hexagon:hover {
    border-color: var(--vyoma-teal);
    box-shadow: 0 0 20px rgba(48, 197, 220, 0.5);
    transform: translateY(-5px);
}

/* How Can You Help Us Section */
.help-cards-container {
    padding: 2rem;
    border-radius: 1rem;
    text-align: center;
}

.help-card {
    background-color: rgba(30, 30, 30, 0.7);
    border: 1px solid rgba(255, 255, 255, 0.1);
    transition: all 0.3s ease;
    padding: 1.5rem;
    text-align: center;
}

.help-card:hover {
    border-color: var(--vyoma-teal);
    box-shadow: 0 0 20px rgba(48, 197, 220, 0.4);
    transform: translateY(-5px) scale(1.02);
}

/* Download Card */
.download-card {
    background-color: rgba(30, 30, 30, 0.6);
    transition: all 0.3s ease;
    padding: 1.5rem;
    text-align: center;
}

.download-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(48, 197, 220, 0.3);
}

/* Table Styling */
th, td {
    color: white;
    padding: 10px;
    text-align: center;
}

td {
    background-color: rgba(30, 30, 30, 0.6);
}

/* Industry Collaborators (LOGO SECTION) */
.partners-container {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    gap: 4rem;
    padding: 3rem 0;
}

.partner-logo {
    background-color: white;
    border-radius: 8px;
    padding: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
}

.partner-logo:hover {
    transform: scale(1.05);
    box-shadow: 0 5px 15px rgba(255, 255, 255, 0.2);
}

.partner-logo img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
}

/* Text & Border Styling */
.text-custom-teal {
    color: var(--vyoma-teal);
}

.border-custom-teal {
    border-color: var(--vyoma-teal);
}

.bg-custom-teal {
    background-color: var(--vyoma-teal);
}

/* Contact Us Section */
.contact-text-container {
    border-radius: 1rem;
    background-color: rgba(20, 20, 20, 0.8);
    backdrop-filter: blur(8px);
    border: 1px solid rgba(48, 197, 220, 0.3);
    padding: 2rem;
    text-align: center;
    animation: pulse 4s infinite alternate;
}

.contact-btn {
    background-color: var(--vyoma-teal);
    box-shadow: 0 4px 6px rgba(48, 197, 220, 0.5);
    border: none;
