        @apply text-4xl mb-4;
    }

    .feature-title {
        @apply text-xl font-bold text-white mb-3;
    }

    .feature-desc {
        @apply text-gray-300;
    }

    /* Video */
    .video-container {
        @apply max-w-4xl mx-auto;
    }

    .video-wrapper {
        @apply bg-gray-800 border border-gray-700 rounded-lg overflow-hidden;
    }

    .video-placeholder {
        @apply flex flex-col items-center justify-center py-20 px-6 bg-gray-900;
    }

